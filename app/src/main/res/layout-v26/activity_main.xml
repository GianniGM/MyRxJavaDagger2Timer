<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_timer"
            android:textAllCaps="true"
            android:textSize="@dimen/timerDimension"
            app:layout_constraintBottom_toBottomOf="@id/inputTime"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <EditText
            android:id="@+id/inputTime"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:hint="@string/insert_time_here"
            android:text="@string/initial_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/timerButton"
            app:layout_constraintLeft_toLeftOf="@id/timerButton"
            app:layout_constraintRight_toRightOf="@id/timerButton"
            android:autofillHints="10"
            android:textAllCaps="true"
            android:inputType="number"/>
    <Button
            android:id="@+id/timerButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            android:textColor="#fff"
            android:text="@string/start_timer"
            android:backgroundTint="#2196F3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />

</androidx.constraintlayout.widget.ConstraintLayout>